.span-12.last
  #facebox_header
    %h3
      = t('followers.index.add_a_new_group')

  = form_for(Group.new, :remote => @remote) do |group|
    = group.error_messages
    - if @person_id
      = group.hidden_field :person_id, :value => @person_id
    %p
      = group.label :name , t('.name')
      = group.text_field :name, :maxlength => 20

    %p.checkbox_select
      = group.label :followers_visible, t('groups.edit.make_group_list_visible')
      = group.check_box :followers_visible, :default => true

    %br

    .bottom_submit_section
      = submit_tag t('cancel'), :class => 'button', :type => :reset, :rel => "close"
      = group.submit t('.create'), :class => 'button creation'
